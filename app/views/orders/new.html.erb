<h1>New Order</h1>

<%= form_for @order do |f| %>
<p><%= f.collection_select :task_id, Task.all, :id, :tasks %></p>
<!-- collection_select takes 4 arguments -->
<p><%= f.collection_select :site_id, Site.all, :id, :name %></p>
<p><%= f.collection_select :user_id, User.all, :id, :users %></p>
<%= f.submit %>
<% end %>
<br />
